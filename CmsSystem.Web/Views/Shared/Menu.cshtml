@using CmsSystem.Web.Controllers
@model IEnumerable<CmsSystem.Model.Models.Action>
    

@{ var homeController = ((HomeController)this.ViewContext.Controller);}

<aside class="main-sidebar">
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Assets/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>

            @foreach (var menu in Model)
            {
                <li class="treeview">
                    <a href="#">
                        <i class="@menu.Icon"></i> <span>@menu.Name</span> <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu">
                        @foreach (var subMenu in homeController.GetSubMenu(menu.Id))
                        {
                            var url = subMenu.Link;
                            <li><a href="@url"><i class="@subMenu.Icon"></i>@subMenu.Name.Replace("|-- ","")</a></li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </section>
</aside>
