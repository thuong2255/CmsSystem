@model CmsSystem.Web.Models.UserIndexViewModel
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading panel-head">Danh sách người dùng</div>
                <div class="panel-body">
                    <div class="pull-left" style="padding-bottom:15px">
                        @Html.ActionLink("Thêm", "Create", null, new { @class = "btn btn-success" })
                    </div>
                    <div class="pull-right col-md-4">
                        @using (Html.BeginForm("Index", "User", FormMethod.Get))
                        {
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Tìm kiếm" name="search">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 5%"></th>
                            <th style="width: 15%">Họ và tên</th>
                            <th style="width: 15%">Tên đăng nhập</th>
                            <th style="width: 10%">Điện thoại</th>
                            <th style="width: 15%">Email</th>
                            <th style="width: 5%">Admin</th>
                            <th style="width: 5%">Status</th>
                            <th style="width: 20%">Đăng nhập lần cuối</th>
                            <th style="width: 15%">Quản lý</th>
                            <th style="width:  5%"></th>
                        </tr>
                        @foreach (var item in Model.UsersVm)
                        {
                            <tr>
                                <td>@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-pencil" })</td>
                                <td>@item.FullName</td>
                                <td>@item.UserName</td>
                                <td>@item.Mobile</td>
                                <td>@item.Email</td>
                                <td>@item.IsAdmin</td>
                                <td>@item.Status</td>
                                <td>@item.LastLogin</td>
                                <td>@Html.ActionLink("Phân quyền", "Authorize", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
                                <td><button data-menu-id="@item.Id" class="btn btn-danger js-delete"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="box-footer">
                    <div class="pull-left">
                        @Html.PagedListPager(Model.UsersVm, page => Url.Action("Index", new {search = Model.Search,page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



