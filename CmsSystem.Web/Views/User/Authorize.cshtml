@model List<CmsSystem.Web.Models.RightRole>

@{
    ViewBag.Title = "Authorize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading panel-head">Gán quyền cho User</div>
                <div id="frm-role" class="panel-body">
                    @foreach (var item in Model)
                    {
                        <div class="form-group">
                            @if (item.IsGranted)
                            {
                                <input type="checkbox" class="minimal" value="@item.Id" checked> @item.Name
                            }
                            else
                            {
                                <input type="checkbox" class="minimal" value="@item.Id"> @item.Name
                            }

                        </div>
                    }
                    <div class="form-group">
                        <div class="pull-left">
                            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
                        </div>
                        <div class="pull-right">
                            <input class="btn btn-success" id="btnSubmit" type="button" value="Cập nhật" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    var common = {
        init: function () {
            common.registerEvent();
        },
        registerEvent: function () {
            $("#btnSubmit").click(function () {
                common.updateAuthozation();
            });
        },

        updateAuthozation: function () {
            var allRole = [];
            $('#frm-role input:checkbox:checked').each(function () {
                allRole.push($(this).val());
            });

            var listRole = JSON.stringify(allRole);

            $.ajax({
                url: '/User/UpdateAuthozation',
                data: {
                    listRole: listRole
                },
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data.status) {
                        alert('Cập nhật quyền thành công');
                    }
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }
    }
    common.init();
</script>

